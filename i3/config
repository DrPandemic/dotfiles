         timeout 300 'swaymsg "output * dpms off" && swaylock -f -i ~/Pictures/Wallpapers/nolq2m6919j01.jpg -s fill' \
              resume 'swaymsg "output * dpms on"' \
         before-sleep 'swaylock -f -i ~/Pictures/Wallpapers/nolq2m6919j01.jpg -s fill'
